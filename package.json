{
  "name": "europa-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@polkadot/api": "^4.9.2",
    "@polkadot/ui-keyring": "^0.75.1",
    "@polkadot/ui-settings": "^0.75.1",
    "antd": "^4.15.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.1.7",
    "styled-components": "^5.3.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@polkadot/typegen": "^4.9.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.9",
    "customize-cra": "^1.0.0",
    "electron": "^12.0.6",
    "electron-builder": "^22.11.1",
    "react-app-rewired": "^2.1.8",
    "react-scripts": "4.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "generate:defs": "tsc --paths type --outDir types &&  node_modules/.bin/polkadot-types-from-defs.cmd --package europa-ui/interfaces --input ./types/interfaces",
    "start": "react-app-rewired start",
    "build": "cross-env REACT_APP_NODE_ENV=production react-app-rewired build",
    "build:pre": "cross-env REACT_APP_NODE_ENV=pre-production react-app-rewired build",
    "test": "cross-env REACT_APP_NODE_ENV=test react-app-rewired test",
    "start:electron": " electron ./",
    "pack:win:dir": " electron-builder --dir",
    "pack:win": "electron-builder --win",
    "pack:mac:dir": "electron-builder --mac --dir",
    "pack:mac": "electron-builder --mac",
    "pack:linux:dir": "electron-builder --linux --dir",
    "pack:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "ui.europa.patract",
    "productName": "Europa-UI",
    "copyright": "Â© 2021 Patract Labs Co., Limited, All Rights Reserved.",
    "mac": {},
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "win": {
      "target": "nsis",
      "icon": "build/favicon.ico"
    },
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "ui-resources/**/*",
      "build/*",
      "main.js"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "zh_CN"
      ],
      "language": "0804",
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "shortcutName": "europa",
      "allowElevation": true,
      "unicode": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
